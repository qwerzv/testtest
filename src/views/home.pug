                form#nickname-roomname
                    input#nickname(placeholder="nickname", required, type="text")
                    input#roomname(placeholder="room name", required, type="text")
                    button Enter Room
                    h4 Open Room: 
                    ul
            div#room
                h3
                video#myFace(autoplay,playsinline, width="400", height="400")
